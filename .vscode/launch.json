    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Header",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/packager.py",
            "args": [
                "header"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "List packages",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/packager.py",
            "args": [
                "list"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Test all packages",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/packager.py",
            "args": [
                "test",
                "--all",
            ],
            "console": "integratedTerminal",
        },
        {
            "name": "Test python-clicolor",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/packager.py",
            "args": [
                "test",
                "python-clicolor",
            ],
            "console": "integratedTerminal",
        },
        {
            "name": "Build image",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/packager.py",
            "args": [
                "image",
                "build",
            ],
            "console": "integratedTerminal",
        },
    ]
}
